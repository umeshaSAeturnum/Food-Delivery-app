<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_elevation"
    android:layout_marginHorizontal="@dimen/cardview_margin_cv"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="@dimen/cardview_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageview_ci"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza"
        android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foodName_ci"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/author_margin_left"
                android:layout_marginTop="@dimen/price_margin_top_cv"
                android:layout_marginRight="@dimen/margin_right_item_cv"
                android:fontFamily="sans-serif-medium"
                android:text="Devilled Chicken Pizza"
                android:textColor="@color/black"
                android:textSize="@dimen/foodname_font_cv" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/foodPrice_ci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/author_margin_left"
                android:textColor="@color/grey"
                android:layout_marginRight="@dimen/margin_right_item_cv"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:text="Rs 1900"
                android:textSize="@dimen/foodprice_font_cv"
                android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/chkBox_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColorHighlight="@color/grey"
                    android:layout_marginStart="120dp"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<!--            <TextView-->
<!--                android:id="@+id/quantity_ci"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="@dimen/author_margin_left"-->
<!--                android:layout_marginRight="@dimen/margin_right_item_cv"-->
<!--                android:fontFamily="sans-serif-medium"-->
<!--                android:singleLine="true"-->
<!--                android:text="1 Qty"-->
<!--                android:textColor="@color/grey"-->
<!--                android:textSize="@dimen/foodprice_font_cv"-->
<!--                android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="80dp">
                <ImageButton
                    android:id="@+id/btn_minus_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/ash_100"
                    android:elevation="4dp"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:src="@drawable/minus"/>

                <TextView
                    android:id="@+id/tvQty_ci"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:text="@string/zero"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

                <ImageButton
                    android:id="@+id/btn_plus_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/ash_100"
                    android:elevation="4dp"
                    android:textAlignment="center"
                    android:src="@drawable/plus"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:textSize="@dimen/title_txt_size"
            android:layout_marginLeft="@dimen/txt_margin"
            android:layout_marginRight="@dimen/txt_margin"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_marginBottom="@dimen/title_padding"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:justificationMode="inter_word"
            android:textSize="@dimen/description_font_size"
            android:layout_marginRight="@dimen/txt_margin"
            android:layout_marginLeft="@dimen/txt_margin"
            android:layout_marginBottom="@dimen/title_padding"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>


