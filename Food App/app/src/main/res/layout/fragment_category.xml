<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CategoryFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pizza_card"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background = "@color/yellow_200">

                            <ImageView

                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pizza_card" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:textSize="18dp"
                               android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/pizza"
                                android:textColor="@color/white"
                                android:textStyle="italic"
                                android:layout_marginStart="50dp"
                                android:layout_height="@dimen/author_text_height"
                                android:singleLine="true" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/beverage_card"
                        android:layout_marginStart="20dp"
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background = "@color/yellow_200">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/beverage_card" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/author_text_height"
                                android:layout_marginStart="33dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/beverage"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/appetizer_card"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_marginBottom="30dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background = "@color/yellow_200">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza_card" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/appetizer"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:layout_marginStart="32dp"
                        android:layout_height="@dimen/author_text_height"
                        android:singleLine="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/dessert_card"
                android:layout_marginStart="20dp"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_marginBottom="30dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background = "@color/yellow_200">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dessert_card" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/author_text_height"
                        android:layout_marginStart="40dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/dessert"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="italic" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>